<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" debug="false">

    <!-- ================================================== -->
    <!-- Variáveis reutilizáveis (pode ser sobrescrito via ENV) -->
    <!-- ================================================== -->
    <property name="APP_NAME" value="${spring.application.name:-application}" />
    <property name="LOG_PATH" value="${LOG_PATH:-logs}" />
    <property name="LOG_FILE" value="${LOG_PATH}/${APP_NAME}.log" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} [%thread] %-5level %logger{36} %X{traceId:-}%X{spanId:-} - %msg%n" />

    <!-- ================================================== -->
    <!-- Encoders (padrões)                                -->
    <!-- ================================================== -->
    <encoder name="PATTERN_ENCODER" class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
        <pattern>${LOG_PATTERN}</pattern>
        <charset>UTF-8</charset>
    </encoder>

    <!-- ===================== -->
    <!-- Console (legível)    -->
    <!-- ===================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(${LOG_PATTERN})</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ===================== -->
    <!-- Arquivo (texto)      -->
    <!-- Rolagem por data+tamanho -->
    <!-- ===================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>200MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ===================== -->
    <!-- Arquivo de ERRO       -->
    <!-- ===================== -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-error.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-error-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ===================== -->
    <!-- Arquivo JSON (para ELK/Loki/Grafana) -->
    <!-- Requer dependência `net.logstash.logback:logstash-logback-encoder` -->
    <!-- ===================== -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.json.log</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <fieldName>timestamp</fieldName>
                </timestamp>
                <message />
                <loggerName />
                <threadName />
                <logLevel />
                <mdc />
                <stackTrace />
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-%d{yyyy-MM-dd}.%i.json.gz</fileNamePattern>
            <maxFileSize>200MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ===================== -->
    <!-- Appender assíncrono (evita bloquear threads de negócio) -->
    <!-- Encapsula os appenders de arquivo para performance        -->
    <!-- ===================== -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>5000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>false</neverBlock>
        <appender-ref ref="FILE" />
        <appender-ref ref="ERROR_FILE" />
        <appender-ref ref="JSON_FILE" />
    </appender>

    <!-- ===================== -->
    <!-- Appender para auditoria (opcional) -->
    <!-- Use um logger específico: com.APPNAME.audit -->
    <!-- ===================== -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-audit.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-audit-%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>365</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- ===================== -->
    <!-- Perfis (dev/test/prod) -->
    <!-- Controle por SPRING_PROFILES_ACTIVE -->
    <!-- ===================== -->

    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
            <appender-ref ref="ERROR_FILE" />
        </root>

        <!-- menos ruído em libs comuns -->
        <logger name="org.springframework" level="INFO" />
        <logger name="org.hibernate.SQL" level="DEBUG" />
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" />
        <logger name="com" level="DEBUG" />
    </springProfile>

    <springProfile name="test">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </root>
        <logger name="org.springframework" level="INFO" />
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <!-- usa appender assíncrono para escrita de arquivos em produção -->
            <appender-ref ref="ASYNC_FILE" />
            <!-- json file para ingestion em ELK/Loki se configurado -->
            <appender-ref ref="JSON_FILE" />
        </root>

        <!-- reduz log de bibliotecas para evitar overload -->
        <logger name="org.springframework" level="WARN" />
        <logger name="org.hibernate" level="WARN" />
        <logger name="com.identityaccessdomain" level="INFO" />
    </springProfile>

    <!-- Default (fallback) -->
    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </root>
    </springProfile>

    <!-- ===================== -->
    <!-- Loggers específicos (exemplos) -->
    <!-- ===================== -->
    <logger name="org.springframework.web" level="INFO" />
    <logger name="org.springframework.boot.autoconfigure" level="INFO" />
    <logger name="org.apache.catalina" level="WARN" />
    <logger name="com.identityaccessdomain.audit" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_FILE" />
    </logger>

</configuration>
